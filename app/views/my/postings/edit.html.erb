<h3>Edit Job Posting</h3></br>
<%= form_for [:my, @posting] do |f| %>
	<form class="form-horizontal" role="form">
	  
	  <div class="form-group">	
	    <%= f.label :title, class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.text_field :title, class: "form-control", id: "inputEmail3", placeholder: "Title" %></br>
	    </div>
	  </div>

	  <div class="form-group">	
	    <%= f.label :company, class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.text_field :company, class: "form-control", id: "inputEmail3", placeholder: "Company" %></br>
	    </div>
	  </div>

	  <div class="form-group">	
	    <%= f.label :location, class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.text_field :location, class: "form-control", id: "inputEmail3", placeholder: "Location" %></br>
	    </div>
	  </div>

	  <div class="form-group">	
	    <%= f.label :job_type, class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.select :job_type, options_for_select(["Choose One", "Permanent", "Freelance", "Contract", "Other"]), class: "form-control drop-down", id: "inputEmail3", placeholder: "Job Type" %></br></br>
	    </div>
	  </div>

	  <div class="form-group">	
	    <%= f.label :catagory, class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.select :catagory, options_for_select(["Choose One", "Account Management", "Business Development", "Client Services", "Communications", "Customer Services", "Design", "Development", "Information Technology", "Marketing", "Operations", "Project Management", "Other"]), class: "form-control down-drop", id: "inputEmail3", placeholder: "Catagory" %></br></br>
	    </div>
	  </div>

	  <div class="form-group">	
	    <%= f.label :job_description, class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.text_area :job_description, rows: 8, class: "form-control", id: "inputEmail3", placeholder: "Job description" %></br>
	    </div>
	  </div>

	  <div class="form-group">	
	    <%= f.label :job_responsibilities, class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.text_area :job_responsibilities, rows: 8, class: "form-control", id: "inputEmail3", placeholder: "Job responsibilities" %></br>
	    </div>
	  </div>

	  <div class="form-group">	
	    <%= f.label :required_experience, class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.text_area :required_experience, rows: 8, class: "form-control", id: "inputEmail3", placeholder: "Required experience" %></br>
	    </div>
	  </div>

	  <div class="form-group">	
	    <%= f.label :further_information, class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.text_area :further_information, rows: 6, class: "form-control", id: "inputEmail3", placeholder: "Further information" %></br>
	    </div>
	  </div>

	  <div class="form-group">	
	    <%= f.label :compensation, class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.text_field :compensation, class: "form-control", id: "inputEmail3", placeholder: "Compensation" %></br>
	    </div>
	  </div>

	  <div class="form-group">	
	    <%= f.label :how_to_apply, class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.text_area :how_to_apply, rows: 6, class: "form-control", placeholder: "How to apply" %></br>
	    </div>
	  </div>

	  <div class="form-group">	
	    <%= f.label :tag_list, "Tags (separated by commas)", class: "col-sm-2 control-label"  %>
	    <div class="col-sm-10">
	    	<%= f.text_field :tag_list, class: "form-control", id: "inputEmail3", placeholder: "Tags" %></br>
	    </div>
	  </div>
	  
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
	      <%= f.submit "Edit Project", method: :put, class: "btn btn-success" %></br></br></br>
	    </div>
	  </div>
	</form>
<% end %>
